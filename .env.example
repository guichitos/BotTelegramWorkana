# Copia este archivo y renómbralo según el entorno:
# .env.dev, .env.laptop o .env.prod

# =========================
# Variables comunes
# =========================
BOT_ENV=dev  # dev | laptop | prod
BOT_NAME="Workana Tracker"
BOT_USERNAME=workana_tracker_bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

LOG_LEVEL=INFO
WEBHOOK_URL=https://example.com/webhook

# =========================
# Base de datos de variables (variables_api_db.py)
# =========================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=variables_api
DB_USER=root
DB_PASS=your_db_password_here

# =========================
# Base de datos de proyectos (workana_bot_database_model.py)
# =========================
PROJECTS_DB_HOST=127.0.0.1
PROJECTS_DB_PORT=3306
PROJECTS_DB_NAME=proyectos_workana_db
PROJECTS_DB_USER=root
PROJECTS_DB_PASS=your_projects_db_password_here

# =========================
# Twilio (send_twilio_message.py)
# =========================
